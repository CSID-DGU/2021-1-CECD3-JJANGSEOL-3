<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" "/>

        <TextView
            android:id="@+id/txtFilesHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available Asset Files"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtAssetFiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" "
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtDB"
            android:layout_width="match_parent"
            android:layout_height="241dp"
            android:layout_gravity="center"
            android:text=" " />



        <EditText
            android:id="@+id/edtFileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter File Name"/>

        <Button
            android:id="@+id/btnReadCSV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="READ"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" "/>

        <Button
            android:id="@+id/btnShowData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="SHOW FILE DATA"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtFileData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Update DataBase"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnSendPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="send to server"
            android:textAlignment="center"
            android:textStyle="bold"/>



        <TextView
            android:id="@+id/txtPredData"
            android:layout_width="match_parent"
            android:layout_height="323dp"
            android:layout_gravity="center"
            android:gravity="left" />

        <Button
            android:id="@+id/btnExitPage"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_gravity="center"
            android:text="Back"
            android:textAlignment="center"
            android:textStyle="bold" />


    </LinearLayout>

</ScrollView>